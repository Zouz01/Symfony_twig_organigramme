<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Organigramme hiérarchique</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text></svg>">
    <link rel="stylesheet" href="{{ asset('css/shows.css') }}">
</head>
<body>
    <h1>Organigramme hiérarchique</h1>
    <div class="org-chart">
        {% for teamMember in team %}
            {% if teamMember.manager_id is null %}
                 <div class="manager">
            <a href="{{ path('app_shows', { 'id': teamMember.getId() }) }}">
                <img src="{{ asset(teamMember.getPhoto()) }}" alt="{{ teamMember.getFirstname() }} {{ teamMember.getLastname() }}">
                <h3>{{ teamMember.getFirstname() }} {{ teamMember.getLastname() }}</h3>
            </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
         
        {% endfor %}
    </div>
</body>
</html>
